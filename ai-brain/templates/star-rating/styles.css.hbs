.{{componentName}}-container {
  display: flex;
  gap: 5px;
  font-size: 24px;
  cursor: pointer;
  font-family: 'Segoe UI', sans-serif;
}
.star {
  color: #ccc;
  transition: color 0.2s;
}
.star.active {
  color: #ffc107;
}
.star:hover {
  color: #ffdb4d;
}
.star.disabled {
    cursor: default;
    opacity: 0.6;
}
